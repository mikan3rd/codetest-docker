generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model transactions {
  id          Int    @id @default(autoincrement()) @db.UnsignedInt
  user_id     Int    @db.UnsignedInt
  amount      Int
  description String @db.VarChar(256)
  version     Int    @db.UnsignedInt
  users       users  @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "fk_transactions_users")

  @@unique([user_id, version], map: "idx_user_version")
}

model users {
  id           Int            @id @default(autoincrement()) @db.UnsignedInt
  name         String         @db.VarChar(128)
  api_key      String         @unique(map: "uniq_api_key") @db.VarChar(256)
  transactions transactions[]
}
